<!DOCTYPE html>
<html>

<head>
    <title>Lego Collection - Add Set</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/theme.css">
</head>

<body>
    <%- include('partials/navbar', { page: '/lego/addSet' }) %>

    <div class="container">
        <div class="row">
            <main class="col-md-12">
                <section class="bg-light text-center py-5">
                    <div class="container">
                        <h1 class="display-5 fw-bold">Add Set</h1>
                        <p class="lead text-muted">
                            Add a new Lego set to the collection using the form below.
                        </p>
                    </div>
                </section>

                <section class="py-4">
                    <div class="container">
                        <form method="POST" action="/lego/addSet" class="row g-3">
                            <div class="col-md-6">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" id="name" name="name" class="form-control" required>
                            </div>

                            <div class="col-md-3">
                                <label for="year" class="form-label">Year</label>
                                <input type="number" id="year" name="year" class="form-control" required>
                            </div>

                            <div class="col-md-3">
                                <label for="num_parts" class="form-label">Number of Parts</label>
                                <input type="number" id="num_parts" name="num_parts" class="form-control" required>
                            </div>

                            <div class="col-md-6">
                                <label for="img_url" class="form-label">Image URL</label>
                                <input type="url" id="img_url" name="img_url" class="form-control" required>
                            </div>

                            <div class="col-md-3">
                                <label for="theme_id" class="form-label">Theme</label>
                                <select id="theme_id" name="theme_id" class="form-select" required>
                                    <option value="">-- Select a Theme --</option>
                                    <% themes.forEach(function(theme) { %>
                                        <option value="<%= theme.id %>"><%= theme.name %></option>
                                    <% }) %>
                                </select>
                            </div>

                            <div class="col-md-3">
                                <label for="set_num" class="form-label">Set Number</label>
                                <input type="text" id="set_num" name="set_num" class="form-control" required>
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">Add Set</button>
                            </div>
                        </form>
                    </div>
                </section>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>
