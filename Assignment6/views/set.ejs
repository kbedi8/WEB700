<!DOCTYPE html>
<html>

<head>
    <title>Lego Collection - Set Details</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/theme.css">
</head>

<body>
    <%- include('partials/navbar', { page: '/lego/sets' }) %>

    <div class="container">
        <div class="row">
            <main class="col-md-12">
                <!-- Header Section -->
                <section class="bg-light text-center py-5">
                    <div class="container">
                        <h1 class="display-5 fw-bold"><%= set.name %></h1>
                        <p class="lead text-muted">
                            Detailed information about the set: <%= set.name %>
                        </p>
                    </div>
                </section>

                <!-- Set Details Section -->
                <section class="py-4">
                    <div class="container">
                        <div class="row g-4 align-items-center">
                            <!-- Set Image -->
                            <div class="col-md-4 text-center">
                                <% if (set.img_url) { %>
                                    <img src="<%= set.img_url %>" alt="<%= set.name %>"
                                        class="img-fluid rounded shadow-sm">
                                <% } else { %>
                                    <div class="border rounded p-5 text-muted">
                                        No image available
                                    </div>
                                <% } %>
                            </div>

                            <!-- Set Info & Quote -->
                            <div class="col-md-8">
                                <div class="card shadow-sm">
                                    <div class="card-body">
                                        <h5 class="card-title mb-3">Set Information</h5>
                                        <p class="mb-1"><strong>Set Number:</strong> <%= set.set_num %></p>
                                        <p class="mb-1"><strong>Theme:</strong> <%= set.Theme.name %></p>
                                        <p class="mb-1"><strong>Year:</strong> <%= set.year %></p>
                                        <p class="mb-1"><strong>Number of Parts:</strong> <%= set.num_parts %></p>

                                        <!-- Random Quote Card -->
                                        <div class="card mt-3 border-info">
                                            <div class="card-body">
                                                <p id="quote" class="mb-0 fst-italic text-info">
                                                    Loading quote...
                                                </p>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Action Buttons -->
                                    <div class="card-footer d-flex justify-content-between">
                                        <a href="/lego/deleteSet/<%= set.set_num %>"
                                            class="btn btn-outline-danger">Delete Set</a>
                                        <a href="/lego/sets" class="btn btn-secondary">Back to Collection</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Random Quote Script -->
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            fetch("https://dummyjson.com/quotes/random")
                .then(response => response.json())
                .then(data => {
                    const quoteElem = document.getElementById("quote");
                    quoteElem.innerHTML = `"${data.quote}" â€” <strong>${data.author}</strong>`;
                })
                .catch(err => {
                    console.error("Error fetching quote:", err);
                    document.getElementById("quote").innerHTML = "Unable to load quote at this time.";
                });
        });
    </script>

</body>
</html>
